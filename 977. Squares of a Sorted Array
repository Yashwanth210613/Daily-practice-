//SOLUTION 1
class Solution {
    public int[] sortedSquares(int[] nums) {
        int n= nums.length;
        for(int i=0;i<n;i++){
            nums[i] = nums[i]*nums[i];
        }
        Arrays.sort(nums);
        return nums;
    }
}
// SOLUTION 2
class Solution {
    public int[] sortedSquares(int[] nums) {
        int n =  nums.length;
        int[] res = new int[n];
        int left=0;
        int right=n-1;
        int pos=n-1;
        while(left<=right){
            int ls = nums[left]*nums[left];
            int rs = nums[right]*nums[right];
            if(ls>rs){
                res[pos]=ls;
                left++;
            }else{
                res[pos]=rs;
                right--;
            }
            pos--;
        }
        return res;
    }
}
