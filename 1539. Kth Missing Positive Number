//SOLUTION 1
class Solution {
    public int findKthPositive(int[] arr, int k) {
        int i=0;
        int num=1;
        while(k>0){
            if(i<arr.length && arr[i]==num){
                i++;
            }
            else{
                k--;
                if(k==0){
                    return num;
                }
            }
            num++;
        }
        return num;
    }
}

//Solution 2
class Solution {
    public int findKthPositive(int[] arr, int k) {
        for(int i=0;i<arr.length;i++){
            int miss = arr[i] - (i+1);
            if(miss >= k){
                return i+k;
            }
        }
        return arr.length+k;
    }
}

//SOLUTION 3
class Solution {
    public int findKthPositive(int[] arr, int k) {
        int left=0;
        int right=arr.length-1;
        while(left<=right){
            int mid = left + (right-left)/2;
            int miss = arr[mid]-(mid+1);
            if(miss<k){
                left=mid+1;
            }else{
                right=mid-1;
            }
        }
        return left+k;
    }
}
